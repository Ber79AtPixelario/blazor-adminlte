            </Card>
        </Column>
        <Column Width="Width.Three" Size="Size.Medium">
            <Card HeaderBackgroundColor="Color.Danger" ToolOptions="new CardToolOptions { Maximizable = true }">
                <Title><CardTitle>Maximizable</CardTitle></Title>
                <Header><CardTools /></Header>
                <Body>
                    The body of the card
                </Body>
            </Card>
        </Column>
    </Row>


    <Row>
        <Column Width="Width.Three" Size="Size.Medium">
            <Card HeaderBackgroundColor="Color.Primary">
                <Title><CardTitle>Card Refresh</CardTitle></Title>
                <Header><CardTools OnRefresh="GetContent" /></Header>
                <Body>
                    @BodyRefreshCard
                </Body>
            </Card>
        </Column>
        @code {
            private MarkupString BodyRefreshCard { get; set; } = (MarkupString)"The body of the card";
            private void GetContent(Tuple<ICardTools, MouseEventArgs> tuple)
            {
                BodyRefreshCard = (MarkupString)"The body of the card, after refresh";
            }
        }
        <Column Width="Width.Three" Size="Size.Medium">
            <Card HeaderBackgroundColor="Color.Success" ToolOptions="new CardToolOptions { Collapsable = true, Removable = true, Maximizable = true }">
                <Title><CardTitle>All together</CardTitle></Title>
                <Header><CardTools OnRefresh="GetContent2" /></Header>
                <Body>
                    @BodyRefreshCard2
                </Body>
            </Card>
        </Column>
        @code {
            private MarkupString BodyRefreshCard2 { get; set; } = (MarkupString)"The body of the card";
            private void GetContent2(Tuple<ICardTools, MouseEventArgs> tuple)
            {
                BodyRefreshCard2 = (MarkupString)"The body of the card, after refresh";
            }
        }
        <Column Width="Width.Three" Size="Size.Medium">
            <Card HeaderBackgroundColor="Color.Warning" LoadingState="LoadingState.Normal">
                <Title><CardTitle>Loading state</CardTitle></Title>
                <Body>
                    The body of the card
                </Body>
            </Card>
        </Column>
