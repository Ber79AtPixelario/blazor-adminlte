    <h5>Cards</h5>
    <h6>Abilities</h6>
    <Row>
        <Column Width="Width.Three" Size="Size.Medium">
            <Card HeaderBackgroundColor="Color.Primary" ToolOptions="new CardToolOptions { Expandable = true }">
                <Title><CardTitle>Expandable</CardTitle></Title>
                <Header><CardTools /></Header>
                <Body>
                    The body of the card
                </Body>
            </Card>
        </Column>
        <Column Width="Width.Three" Size="Size.Medium">
            <Card HeaderBackgroundColor="Color.Success" ToolOptions="new CardToolOptions { Collapsable = true }">
                <Title><CardTitle>Collapsable</CardTitle></Title>
                <Header><CardTools /></Header>
                <Body>
                    The body of the card
                </Body>
            </Card>
        </Column>
        <Column Width="Width.Three" Size="Size.Medium">
