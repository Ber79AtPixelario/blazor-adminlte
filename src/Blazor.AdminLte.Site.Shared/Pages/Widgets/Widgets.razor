@page "/widgets"
    <div class="container-fluid">
        <h1>Widgets</h1>
        <h5>Info Box</h5>
        <Row>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox IconBackgroundColor="Color.Danger" Icon="far fa-envelope" Number=1410>
                    <Title>Messages</Title>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox IconBackgroundColor="Color.Success" Icon="far fa-flag" Number=410>
                    <Title>Bookmarks</Title>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox IconBackgroundColor="Color.Warning" Icon="far fa-copy" Number=13648>
                    <Title>Uploads</Title>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox Gradient="Gradient.Gradient" IconBackgroundColor="Color.Info" Icon="far fa-star" Number=93139>
                    <Title>Likes</Title>
                </InfoBox>
            </Column>
        </Row>
        <h5>Info Box With bg-*</h5>
        <Row>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox BackgroundColor="Color.Info" Icon="far fa-bookmark" Percentage=70 Number=41.410>
                    <Title>Bookmarks</Title>
                    <ProgressDescription>70% Increase in 30 Days</ProgressDescription>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox BackgroundColor="Color.Success" Icon="far fa-thumbs-up" Percentage=70 Number=41.410>
                    <Title>Likes</Title>
                    <ProgressDescription>70% Increase in 30 Days</ProgressDescription>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox BackgroundColor="Color.Warning" Icon="far fa-calendar" Percentage=70 Number=41.410>
                    <Title>Events</Title>
                    <ProgressDescription>70% Increase in 30 Days</ProgressDescription>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox BackgroundColor="Color.Danger" Icon="far fa-comments" Percentage=70 Number=41.410>
                    <Title>Comments</Title>
                    <ProgressDescription>70% Increase in 30 Days</ProgressDescription>
                </InfoBox>
            </Column>
        </Row>
        <h5>Info Box With bg-gradient-*</h5>
        <Row>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox Gradient="Gradient.Gradient" BackgroundColor="Color.Info" Icon="far fa-bookmark" Percentage=70 Number=41.410>
                    <Title>Bookmarks</Title>
                    <ProgressDescription>70% Increase in 30 Days</ProgressDescription>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox Gradient="Gradient.Gradient" BackgroundColor="Color.Success" Icon="far fa-thumbs-up" Percentage=70 Number=41.410>
                    <Title>Likes</Title>
                    <ProgressDescription>70% Increase in 30 Days</ProgressDescription>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox Gradient="Gradient.Gradient" BackgroundColor="Color.Warning" Icon="far fa-calendar" Percentage=70 Number=41.410>
                    <Title>Events</Title>
                    <ProgressDescription>70% Increase in 30 Days</ProgressDescription>
                </InfoBox>
            </Column>
            <Column Width="Width.Three" Size="Size.Medium">
                <InfoBox Gradient="Gradient.Gradient" BackgroundColor="Color.Danger" Icon="far fa-comments" Percentage=70 Number=41.410>
                    <Title>Comments</Title>
                    <ProgressDescription>70% Increase in 30 Days</ProgressDescription>
                </InfoBox>
            </Column>
        </Row>
        <h5>Social Widgets</h5>
        <Row>
            <Column Width="Width.Six" Size="Size.Medium">
                <WidgetSocial BackgroundColor="Color.Info"
                              ImageEffect="ImageEffect.Circle"
                              Elevation="Elevation.Two"
                              Image="_content/Blazor.AdminLte.Site.Shared/dist/img/user1-128x128.jpg"
                              Name="Alexander Pierce"
                              Title="Founder & CEO">
                    <DescriptionHeader1>3,200</DescriptionHeader1>
                    <Description1>SALES</Description1>
                    <DescriptionHeader2>13,000</DescriptionHeader2>
                    <Description2>FOLLOWERS</Description2>
                    <DescriptionHeader3>35</DescriptionHeader3>
                    <Description3>PRODUCTS</Description3>
                </WidgetSocial>
            </Column>
            <Column Width="Width.Six" Size="Size.Medium">
                <WidgetSocial HeaderAlign="HAlign.Right"
                              HeaderForeColor="Color.White"
                              BackgroundImage="_content/Blazor.AdminLte.Site.Shared/dist/img/photo1.png"
                              ImageEffect="ImageEffect.Circle"
                              Image="_content/Blazor.AdminLte.Site.Shared/dist/img/user3-128x128.jpg"
                              Name="Elizabeth Pierce"
                              Title="Web Designer">
                    <DescriptionHeader1>3,200</DescriptionHeader1>
